<Project>
  <!-- Use CI-provided reference assemblies for .NET Framework 4.0 builds -->
  <Target Name="SetFramework40ReferencePath" BeforeTargets="GetReferenceAssemblyPaths" Condition="'$(FRAMEWORK40_PATH)' != '' and '$(TargetFrameworkVersion)' == 'v4.0'">
    <PropertyGroup>
      <FrameworkPathOverride>$(FRAMEWORK40_PATH)</FrameworkPathOverride>
    </PropertyGroup>
    <Message Importance="High" Text="Using FRAMEWORK40_PATH=$(FrameworkPathOverride) for $(MSBuildProjectName)" />
  </Target>
</Project>
